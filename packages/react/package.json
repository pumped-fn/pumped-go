{
  "name": "@pumped-fn/react",
  "version": "0.5.5",
  "description": "React bindings for Pumped Functions",
  "keywords": ["pumped-fn", "react", "functional programming"],
  "author": "Lagz0ne",
  "license": "MIT",
  "homepage": "https://github.com/pumped-fn/pumped-fn",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pumped-fn/pumped-fn.git",
    "directory": "packages/react"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "peerDependencies": {
    "@pumped-fn/core": "^0.5.8",
    "react": "^18.0.0"
  },
  "files": ["dist"],
  "devDependencies": {
    "@pumped-fn/core": "workspace:*",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^18.3.18",
    "jsdom": "^26.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.3.6",
    "vitest": "^1.6.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm run build"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "react-v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}"
    },
    "npm": {
      "publish": true
    }
  }
}
